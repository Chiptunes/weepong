
{

    "name"    : "weePong",
    "version" : "1.0",
    "stage"   : "beta",
    "api"     : "a100d2",

    "language" : {

        "default" : "en-en",
        "list"    : [ "en-en" ]

    },

    "device" : {

        "desktop" : {

            "primary" : "main",
            "service" : [ "pong.js" ],
            "common"  : {

                "css"    : [],
                "script" : [],
                "start"  : []

            },

            "view" : {

                "main" : {
                    
                    "template" : "main.html",

                    "maxizable" : true,
                    "resizable" : false,

                    "width"  : {

                        "default" : 865,
                        "min"     : 0,
                        "max"     : 0

                    },

                    "height" : {

                        "default" : 550,
                        "min"     : 0,
                        "max"     : 0

                    },

                    "css"    : ["style.css"],
                    "script" : ["script.js"]

                }


            }

        },

        "mobile" : {

            "primary" : "main",
            "service" : [],
            "common"  : {

                "css"    : [],
                "script" : [],
                "start"  : []

            },

            "view" : {

                "main" : {
                    
                    "template" : "mainMobile.html",
                    "css"      : ["mobile.css"],
                    "script"   : ["mobile.js"]

                }

            }

        },

        "tv" : {

            "primary" : "main",
            "service" : [],
            "common"  : {

                "css"    : [],
                "script" : [],
                "start"  : []

            },

            "view" : {

                "main" : {
                    
                    "template": "mainTv.html",
                    "css"    : ["styleTV.css"],
                    "script" : ["script.js"]

                }


            }

        }

    },

    "permission" : {

        "channel" : true,
        "user"    : {

            "modify" : false,
            "read"   : true
            
        }

    }

}
